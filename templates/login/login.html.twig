{% extends 'base.html.twig' %}

{% block title %}Connexion - Système de Facturation{% endblock %}

{% block stylesheets %}
    <style>
        .login-container {
            max-width: 450px;
            margin: 2rem auto;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            background-color: #fff;
        }

        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .login-icon {
            font-size: 3rem;
            color: #0d6efd;
            margin-bottom: 1rem;
        }

        .login-form .form-floating {
            margin-bottom: 1rem;
        }

        .login-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1.5rem;
        }

        .login-footer {
            text-align: center;
            margin-top: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <div class="login-header">
            <div class="login-icon">
                <i class="fas fa-sign-in-alt"></i>
            </div>
            <h2>Connexion</h2>
            <p class="text-muted">Accédez à votre système de facturation</p>
        </div>

        {% if error %}
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form class="login-form" action="{{ path('login') }}" method="post">
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="nom@exemple.com" required>
                <label for="username"><i class="fas fa-envelope me-2"></i>Adresse email</label>
            </div>

            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe" required>
                <label for="password"><i class="fas fa-lock me-2"></i>Mot de passe</label>
            </div>

            <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me">
                <label class="form-check-label" for="remember_me">
                    Se souvenir de moi
                </label>
            </div>

            {# If you want to control the URL the user is redirected to on success #}
            <input type="hidden" name="_target_path" value="{{ path('invoice_list') }}">

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                </button>
            </div>

            <div class="login-footer mt-4">
                <div class="mb-2">
                    <a href="#" class="text-decoration-none">Mot de passe oublié ?</a>
                </div>
                <div>
                    <p>Pas encore de compte ? <a href="{{ path('app_register') }}" class="text-decoration-none">Créez-en un</a></p>
                </div>
            </div>
        </form>
    </div>
{% endblock %}